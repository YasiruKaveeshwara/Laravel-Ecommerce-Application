{
    "info": {
        "_postman_id": "7b829570-3f33-465b-9c21-1f8b3f0f6f2a",
        "name": "Laravel Ecommerce API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Collection covering public catalog, authenticated user helpers, and administrator backoffice endpoints for the Laravel Ecommerce backend."
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost",
            "type": "string",
            "description": "Root domain where the Laravel backend is served (omit trailing slash)."
        },
        {
            "key": "auth_token",
            "value": "",
            "type": "string",
            "description": "Sanctum API token obtained from the /api/login response."
        },
        {
            "key": "sample_user_id",
            "value": "1",
            "type": "string",
            "description": "Convenience variable for targeting an existing user record."
        },
        {
            "key": "sample_product_id",
            "value": "1",
            "type": "string",
            "description": "Convenience variable for targeting an existing product record."
        }
    ],
    "item": [
        {
            "name": "Public",
            "description": "Endpoints that do not require authentication.",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/login",
                            "host": ["{{base_url}}"],
                            "path": ["api", "login"]
                        },
                        "description": "Single login endpoint for both administrators and customers. Returns an API token, user payload, and suggested redirect URL."
                    }
                },
                {
                    "name": "List Products (Public)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/products?q=&per_page=12",
                            "host": ["{{base_url}}"],
                            "path": ["api", "products"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": ""
                                },
                                {
                                    "key": "per_page",
                                    "value": "12"
                                }
                            ]
                        },
                        "description": "Customer-facing paginated product list. Accepts optional search term `q` and page size `per_page` (max 100)."
                    }
                },
                {
                    "name": "Show Product (Public)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/products/{{sample_product_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "products", "{{sample_product_id}}"]
                        },
                        "description": "Fetch a single product, returning the optimized + watermarked image URL plus the rest of the catalog data."
                    }
                }
            ]
        },
        {
            "name": "Authenticated",
            "description": "Endpoints requiring a Sanctum bearer token (set the {{auth_token}} variable).",
            "item": [
                {
                    "name": "Who Am I",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/me",
                            "host": ["{{base_url}}"],
                            "path": ["api", "me"]
                        },
                        "description": "Returns the currently authenticated user (helpful for clients to refresh session state)."
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/logout",
                            "host": ["{{base_url}}"],
                            "path": ["api", "logout"]
                        },
                        "description": "Revokes the currently active access token."
                    }
                }
            ]
        },
        {
            "name": "Admin — Users",
