                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"first_name\": \"Jane\",\n  \"last_name\": \"Doe\",\n  \"email\": \"jane.doe@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"customer\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/users",
                            "host": ["{{base_url}}"],
                            "path": ["api", "users"]
                        },
                        "description": "Create a new user. Passwords are securely hashed by the model cast."
                    }
                },
                {
                    "name": "Show User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/users/{{sample_user_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "users", "{{sample_user_id}}"]
                        },
                        "description": "Retrieve a specific user's full details."
                    }
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"first_name\": \"Updated\",\n  \"last_name\": \"User\",\n  \"email\": \"updated@example.com\",\n  \"role\": \"administrator\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/users/{{sample_user_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "users", "{{sample_user_id}}"]
                        },
                        "description": "Update any subset of user fields. Omit properties to leave them unchanged."
                    }
                },
                {
                    "name": "Delete User",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/users/{{sample_user_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "users", "{{sample_user_id}}"]
                        },
                        "description": "Soft delete is not enabled; this permanently removes the user record."
                    }
                }
            ]
        },
