                            "host": ["{{base_url}}"],
                            "path": ["api", "users"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": ""
                                },
                                {
                                    "key": "per_page",
                                    "value": "20"
                                }
                            ]
